{
  "name": "mc-api",
  "version": "1.2.1",
  "description": "Minecraft API made by kqzz :D",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --trace-warnings --unhandled-rejections=strict app.local.js",
    "test": "jest",
    "deploy": "npx serverless deploy --verbose"
  },
  "author": "Kqzz",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.6",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "serverless-http": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "serverless": "^2.35.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "linebreak-style": [
        "off"
      ],
      "max-len": [
        "off"
      ],
      "camelcase": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "prefer-promise-reject-errors": [
        "off"
      ]
    }
  }
}
